<!--Home-->
<div class="jumbotron">
     <div class="text-center">
        <h1>All the News That's Fit to Scrape</h1>
        <p>Latest Javascript News from the Echo JS</p>
    </div>
</div>

<!--Article-->
<div class="container">
    <div class="col-md-12">
        {{#if article}}
            {{#each article}}
            <div class="card text-center border-dark">
                <div class="card-header">
                    <h4>{{this.title}}</h4>
                </div>
                <div class="card-body">
                    <p> {{this.summary}}</p>
                    <a href={{this.link}} target="_blank">{{this.link}}</a>
                    <br><br>
                    <button type="button" class="btn btn-success save" data-id={{this._id}}>Save Article</button>
                </div>
            </div>
            {{/each}}
        {{else}}
        <div class="card text-center border-dark">
            <div class="card-body">
            <h4>Looks like we don't have any new articles.</h4>
            </div>
         </div>
        {{/if}}
    </div>
</div>
