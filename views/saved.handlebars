<!--Saved Articles Page-->
<div class="jumbotron">
     <div class="text-center">
        <h1>Saved Articles</h1>
        <p>All the News That's Fit to Scrape</p>
    </div>
</div>

<div class="container">
    <div class="col-md-12">
        {{#if article}}
            {{#each article}}
                <div class="card text-center border-dark">
                    <div class="card-header">
                        <h4>{{this.title}}</h4>
                    </div>
                    <div class="card-body">
                        <p> {{this.summary}}</p>
                        <a href={{this.link}} target="_blank">{{this.link}}</a>
                        <br><br>
                        <button type="button" class="btn btn-success addNote" data-toggle="modal" data-target="#noteModal{{this._id}}" data-id={{this._id}}>Add a Note</button>
                        <button type="button" class="btn btn-danger delete" data-id={{this._id}}>Delete</button>
                    </div>
                </div>
            {{/each}}
        {{else}}
        <div class="card text-center border-dark">
            <div class="card-body">
                <h4>You have no saved articles.</h4>
            </div>
        </div>
        {{/if}}
    </div>
</div>

<!--Notes Modal-->
{{#each article}}
    {{> notes }}
{{/each}}